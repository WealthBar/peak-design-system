{
  "name": "peak-design",
  "version": "1.0.0",
  "private": true,
  "description": "A design system to craft beautiful, scalable, and consistent experiences for Canadians investing in their futures",
  "author": "CI Direct Investing <developers@cidirectinvesting.com>",
  "scripts": {
    "build": "node build/build.js",
    "lint": "eslint 'src/**/*.{js,vue}'",
    "lint:fix": "eslint 'src/**/*.{js,vue}' --fix",
    "ci": "yarn run lint && yarn run test:coverage",
    "coverage": "yarn run test:coverage",
    "dev": "DEMO_MODE=true node build/dev-server.js",
    "dev:local": "DEMO_MODE=false API_URL=http://localhost:3000/api node build/dev-server.js",
    "prod": "API_URL=https://localhost:3000/api node build/prod-server.js",
    "start": "node build/prod-server.js",
    "start:logged": "node build/prod-server.js 1> /var/log/node/app.log 2> /var/log/node/err.log",
    "test:coverage": "nyc -r text-summary -r html yarn test",
    "test:debug": "NODE_ENV=test node inspect -c build/webpack.base.conf.js -r ./util/test_helper.js 'src/**/*.test.js' | tap-spec"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@wealthbar/peak-style": "^3.0.0",
    "compression-webpack-plugin": "^6.1.1",
    "connect-history-api-fallback": "^1.6.0",
    "express": "^4.17.1",
    "fibers": "^5.0.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^1.3.1",
    "prismjs": "^1.22.0",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "vue": "^2.6.12",
    "vue-form": "^4.10.3",
    "vue-loader": "^15.9.5",
    "vue-meta": "^2.4.0",
    "vue-router": "^3.4.9",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.12",
    "vuex": "^3.5.1",
    "webpack": "^5.6.0",
    "webpack-merge": "^5.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-runtime": "^7.12.1",
