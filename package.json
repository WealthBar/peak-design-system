  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "engines": {
    "node": ">= 11.10.1",
    "yarn": ">= 1.0.0"
  },
  "nyc": {
    "all": false,
    "sourceMap": false,
    "instrument": false,
    "check-coverage": true,
    "statements": 100
  }
}
