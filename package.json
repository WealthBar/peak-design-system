{
  "name": "peak-design",
  "version": "1.0.0",
  "private": true,
  "description": "Boilerplate for new WealthBar Vue apps",
  "author": "WealthBar <developers@wealthbar.com>",
  "scripts": {
    "build": "node build/build.js",
    "lint": "eslint 'src/**/*.{js,vue}'",
    "lint:fix": "eslint 'src/**/*.{js,vue}' --fix",
    "ci": "yarn run lint && yarn run test:coverage",
    "coverage": "yarn run test:coverage",
    "dev": "DEMO_MODE=true node build/dev-server.js",
    "dev:local": "DEMO_MODE=false API_URL=http://localhost:3000/api node build/dev-server.js",
    "prod": "API_URL=https://localhost:3000/api node build/prod-server.js",
    "start": "node build/prod-server.js",
    "start:logged": "node build/prod-server.js 1> /var/log/node/app.log 2> /var/log/node/err.log",
    "test": "NODE_ENV=test wprun -c build/webpack.base.conf.js -r ./util/test_helper.js 'src/**/*.test.js' | tap-spec",
    "test:coverage": "nyc -r text-summary -r html yarn test",
    "test:debug": "NODE_ENV=test node inspect -c build/webpack.base.conf.js -r ./util/test_helper.js 'src/**/*.test.js' | tap-spec",
    "test:watch": "NODE_ENV=test wprun -w -c build/webpack.base.conf.js -r ./util/test_helper.js 'src/**/*.test.js' | tap-spec"
  },
  "dependencies": {
    "@wealthbar/peak-style": "^2.5.2",
    "compression-webpack-plugin": "^2.0.0",
    "connect-history-api-fallback": "^1.3.0",
    "express": "^4.15.3",
    "file-loader": "^3.0.1",
    "mini-css-extract-plugin": "^0.6.0",
    "opn": "^5.1.0",
    "prismjs": "^1.20.0",
    "sass": "^1.29.0",
    "sass-loader": "^7.3.1",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.1",
    "stylelint-webpack-plugin": "^0.10.5",
    "terser-webpack-plugin": "^1.2.1",
    "vue": "^2.6",
    "vue-form": "^4.4.0",
    "vue-loader": "^15.0.0",
    "vue-meta": "^1.0.4",
    "vue-router": "^3.0.1",
    "vue-style-loader": "^4.0.0",
    "vue-template-compiler": "^2.6.9",
    "vue-touch": "^2.0.0-beta.4",
    "vuex": "^3.0.0",
    "webpack": "^4.0.0",
    "webpack-merge": "^4.0.0"
  },
  "devDependencies": {
    "@vue/component-compiler": "^3.6.0",
    "@vue/test-utils": "^1.0.0-beta.28",
